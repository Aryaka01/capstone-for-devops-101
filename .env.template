# Environment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env file to Git!

# ========================================
# Application Configuration
# ========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ========================================
# Docker Configuration
# ========================================
DOCKER_USERNAME=your-dockerhub-username
DOCKER_PASSWORD=your-dockerhub-password-or-token
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=task-manager

# ========================================
# Kubernetes Configuration
# ========================================
KUBERNETES_NAMESPACE=task-manager
CLUSTER_NAME=devops-capstone-cluster

# ========================================
# Jenkins Configuration
# ========================================
JENKINS_URL=http://localhost:8081
JENKINS_USER=admin
JENKINS_TOKEN=your-jenkins-api-token

# ========================================
# ArgoCD Configuration
# ========================================
ARGOCD_URL=https://localhost:8082
ARGOCD_USERNAME=admin
ARGOCD_PASSWORD=your-argocd-password

# ========================================
# Git Configuration
# ========================================
GIT_REPO_URL=https://github.com/your-username/devops-simple-capstone.git
GIT_BRANCH=main
GIT_USERNAME=your-github-username
GIT_TOKEN=your-github-personal-access-token

# ========================================
# Terraform Configuration
# ========================================
TF_VAR_cluster_name=devops-capstone-cluster
TF_VAR_namespace=task-manager
TF_VAR_environment=development
TF_VAR_replicas=3

# ========================================
# Notification Configuration (Optional)
# ========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_RECIPIENT=your-email@example.com

# ========================================
# Monitoring Configuration (Optional)
# ========================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
